{
	"compilerOptions": {
		"target": "es5",
		"lib": ["es6", "dom"],
		"module": "ESNext",
		"jsx": "react-jsx",
		"baseUrl": "./",
		"paths": {
			"~/*": ["./*", "src/*", "client/js/*"],
			"@src/*": ["src/*"],
			"@db/*": ["src/db/*"],
			"@models/*": ["src/db/models/*"],
			"@graphql/*": ["src/graphql/*"],
			"@utils/*": ["src/utils/*", "client/js/utils/*"],
			"@pages/*": ["client/js/pages/*"],
			"@components/*": ["client/js/components/*"],
			"@generic/*": ["client/js/generic/*"],
			"@hooks/*": ["client/js/hooks/*"],
			"@stores/*": ["client/js/stores/*"]
		},
		"allowJs": false,
		"skipLibCheck": true,
		"incremental": true,
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"noEmit": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true
	},
	"include": ["**/*.ts", "**/*.tsx", "**/*.js"],
	"exclude": ["**/node_modules", "**/.*/"],
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	}
}
