{
  "name": "mgs-movies-service",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "NODE_ENV=development nodemon",
    "graphql": "ruru -SP -p 4001 -e http://localhost:3000/graphql",
    "build:client": "NODE_ENV=production DEPLOYMENT_ENV=live webpack",
    "build:server": "npm run build --workspace=server",
    "build": "npm run build:client && npm run build:server",
    "prod": "node ./dist/server.js",
    "lint:js": "eslint . --ext ts,js,tsx,jsx",
    "lint:scss": "stylelint \"**/*.{ts,js,tsx,jsx}\"",
    "lint": "npm run lint:js; npm run lint:scss;",
    "ci-lint": "npm run generate:graphql && npm run lint",
    "ci-test": "npm run migrate && jest --detectOpenHandles",
    "test": "jest --coverage --verbose --detectOpenHandles",
    "test:watch": "jest --coverage --watch --runInBand",
    "migrate": "npm run migrate --workspace=server",
    "generate:schema": "babel-node ./scripts/schema.ts --extensions .ts",
    "generate:graphql:client": "npm run generate:graphql --workspace=client",
    "generate:graphql:server": "npm run generate:graphql --workspace=server",
    "generate:graphql": "npm run generate:schema && npm run generate:graphql:client && npm run generate:graphql:server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/napanee/mgs-movies-service.git"
  },
  "author": "Martin Schneider",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/napanee/mgs-movies-service/issues"
  },
  "homepage": "https://github.com/napanee/mgs-movies-service#readme",
  "devDependencies": {
    "@babel/eslint-parser": "^7.17.0",
    "@babel/node": "^7.16.8",
    "@babel/preset-env": "^7.16.8",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.24.1",
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/near-operation-file-preset": "^3.0.0",
    "@graphql-codegen/typescript": "^4.0.6",
    "@graphql-codegen/typescript-operations": "^4.2.0",
    "@graphql-codegen/typescript-react-apollo": "^4.3.0",
    "@graphql-codegen/typescript-resolvers": "^4.0.6",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.4",
    "@types/dotenv-webpack": "^7.0.3",
    "@types/jest": "^29.5.12",
    "@types/supertest": "^6.0.2",
    "@types/webpack-hot-middleware": "^2.25.9",
    "@types/webpack-node-externals": "^3.0.4",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "babel-plugin-inline-dotenv": "^1.6.0",
    "babel-plugin-tsconfig-paths-module-resolver": "^1.0.4",
    "dotenv-webpack": "^8.1.0",
    "eslint": "^8.8.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-import-alias": "^1.2.0",
    "eslint-plugin-typescript-sort-keys": "^3.2.0",
    "graphql-tag": "^2.12.6",
    "jest": "^29.7.0",
    "jest-fetch-mock": "^3.0.3",
    "nodemon": "^3.1.0",
    "react-refresh": "^0.14.0",
    "ruru": "^2.0.0-beta.11",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.2.6",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "typescript": "^5.4.3",
    "webpack": "^5.68.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4",
    "webpack-hot-middleware": "^2.26.1",
    "webpack-merge": "^5.8.0"
  }
}
